@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.DepartmentHomePage>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
	Layout = "NewIntranetMaster.cshtml";
}
@Html.Partial("atozButtons")
<!----- P A G E   H E A D I N G ------------- S T A R T ------->
	<div id="departmentsHeadBackground"><img id="zonePageIcon" src="/media/1070/zonepageiconsupport.png" />
	<h1 id="zoneWhite">@Umbraco.Field("pageTitle")</h1>
	</div>
<!----- P A G E   H E A D I N G ------------- E N D ------->
	
	<!-----------------------M A I N   A R E A   C O N T A I N E R   ---   S T A R T------------->
	<div class="departmentsMainArea">

	<!-------- L E F T   N A V I G A T I O N   B A R ------ S T A R T ------>
	<div id="depNav">
		<div id="thisDep"><a href="@CurrentPage.url">@CurrentPage.name</a></div>
		<ul id="depNav1">
		@foreach (var page in CurrentPage.Children) {
		<li><a href="@page.url">@page.name</a></li>
		}
		</ul>
	</div>
	<!-------- L E F T   N A V I G A T I O N   B A R ------ E N D ------>

<!---------------------------------C O N T E N T   S T A R T---------------------------------------------->
<div id="contentWide">

@*-----'What we do' section----- *@
			
<h2 id="depBlock">What we do</h2>
<div id="depForced">
@Umbraco.Field("bodyText")
</div>
	
@*-----'How to access our services' section----- *@

<h2 id="depBlock">How to access our services</h2>
<div id="depForced">@Umbraco.Field("howToAccessOurServices")
</div>
	
@*-----(optional) Additional information section----- *@
				
@if(@CurrentPage.hideAdditionalInformation==false)
{
<h2 id="depBlock">Additional information</h2>
<div id="depForced">
@Umbraco.Field("additionalInformation")
</div>
}

@*-----(optional) Location section----- *@

@if(@CurrentPage.showLocationDetails==true)
{
	<div id="depForced">
	<h2 id="depBlock">Location</h2>		
					
	@Umbraco.Field("locationDetails")


	@if(@CurrentPage.showLocationMap==true)
	{
		<img src="@Umbraco.Media(CurrentPage.locationMap).Url" />
	}

</div>
}

@*----- optional 'See also' section----- *@
@Html.Partial("seeAlsoSection")


@Html.Partial("advertisingBanner")

<!----- P A G E   I N F O ----- S T A R T ----->
	<div id="pageInfo">
		<div id="pageInfoOwner"><strong>Content owner:</strong><br />@CurrentPage.pageOwner<text>,</text><br />@CurrentPage.pageOwnersPosition</div>
		<div id="pageInfoEditor"><strong>Report a problem with this page to:</strong><br /><a id="pageInfoEditor" href="mailto:@CurrentPage.subEditor?subject=Intranet%20problem&amp;body=Hi%0A%0APage%20title%3A%20(@Umbraco.Field("pageName"))%0A%0AI%27ve%20noticed%20this%20problem%3A%0A%0A">@CurrentPage.subEditor</a></div>
		<div id="pageInfoLastUpdated"><strong>Last updated:</strong><br />@CurrentPage.updateDate.ToString("dd MMMM yyyy")</div>
	</div>
<!----- P A G E   I N F O ----- E N D ----->					
					
</div>
<!---------------------------------C O N T E N T   E N D--------------------------------------------->

</div>
<!-----------------------M A I N   A R E A   C O N T A I N E R   ---   E N D------------->






