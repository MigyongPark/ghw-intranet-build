		<div id="indexNewsList">
			<table id="indexNewsList" cellpadding="0" cellspacing="0" border="0">
			<tr>
				<td id="indexNewsListMain">
					<ul id="indexNewsList">

					@*----- sets the 'News top story' folder location ---- *@
					@{
					var topStoryFolder = Umbraco.TypedContent(@Umbraco.Field("topStoryFolder").ToString());
					}
						@{
							foreach (var child in topStoryFolder.Children.OrderBy("updateDate desc"))
							{

							<a href="@child.Url">
							<li id="newsTopStory">
							@*----- image size is constrained to 260x150  -----*@
							<img id="newsTopStory" src="@Umbraco.TypedMedia(child.GetProperty("pageListingImage").Value).GetCropUrl(width: 260, height: 150)"
								alt="@child.GetProperty("pageListingImageAltText").Value" itemprop="image">


							</li>
							<div id="newsTopStoryCaption">@child.Name</div></a>

						}
					}

					@*----- sets the parent node (this month) ---- *@
					@{
					var thisMonthList = Umbraco.TypedContent(@Umbraco.Field("thisMonthID").ToString());
					}
						@*----- sets counter and then counts 4 items ----- *@
						@{
		    			int count = 1;

							@*--- lists the six most-recently updated news articles from this month ---*@
							@*--- if there are less than six, the next block continues by taking them from last month ---*@
							foreach (var child in thisMonthList.Children.OrderBy("postDate desc"))
							{
								if (count <= 4)
								{
								<a href="@child.Url">
								<li id="indexNewsList">
								@*----- image size is constrained to 130x75  -----*@
								<img id="indexNewsList" src="@Umbraco.TypedMedia(child.GetProperty("pageListingImage").Value).GetCropUrl(width: 130, height: 75)"
									alt="@child.GetProperty("pageListingImageAltText").Value" itemprop="image"><p id="indexNews">@child.Name</p>
								</li></a>
								}
								count = count + 1;
							}
						}

						@*----- sets the parent node (last month) ----*@
						@{
						var lastMonthList = Umbraco.TypedContent(@Umbraco.Field("lastMonthID").ToString());
						}
								@{
								@*---continues to list the most-recently updated news articles from this last month until the count gets to six---*@
								foreach (var child in lastMonthList.Children.OrderBy("postDate desc"))
								{
								if (count <= 4)
								{
								<a href="@child.Url">
								<li id="indexNewsList">
								@*----- image size is constrained to 130x75  -----*@
								<img id="indexNewsList" src="@Umbraco.TypedMedia(child.GetProperty("pageListingImage").Value).GetCropUrl(width: 130, height: 75)"
								alt="@child.GetProperty("pageListingImageAltText").Value" itemprop="image"><p id="indexNews">@child.Name</p>
								</li></a>
								}
								count = count + 1;
							}
						}
					</ul>
				</td>
			</tr>
			</table>
		</div>
